{
  "name": "riot-web-extension",
  "displayName": "RIOT Web Extension",
  "description": "flashing riot from a browser",
  "publisher": "Barkolores78",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riot-web.serial.register",
        "title": "Register Serial Device",
        "icon": {
          "dark": "resources/icons/plus-svgrepo-com-light.svg",
          "light": "resources/icons/plus-svgrepo-com-dark.svg"
        }
      },
      {
        "command": "riot-web.serial.remove",
        "title": "Remove Serial Device"
      },
      {
        "command": "riot-web.serial.openCommunicationTerminal",
        "title": "Open Communication Terminal",
        "icon": {
          "dark": "resources/icons/terminal-svgrepo-com-light.svg",
          "light": "resources/icons/terminal-svgrepo-com-dark.svg"
        }
      },
      {
        "command": "riot-web.serial.flash",
        "title": "Flash Device",
        "icon": {
          "dark": "resources/icons/upload-minimalistic-svgrepo-com-light.svg",
          "light": "resources/icons/upload-minimalistic-svgrepo-com-dark.svg"
        }
      },
      {
        "command": "riot-web.serial.clearTerminal",
        "title": "Clear Serial Terminal"
      },
      {
        "command": "riot-web.serial.closeTerminal",
        "title": "Close Terminal",
        "icon": {
          "dark": "resources/icons/cross-svgrepo-com-light.svg",
          "light": "resources/icons/cross-svgrepo-com-dark.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riot-sidebar",
          "title": "RIOT",
          "icon": "resources/icons/riot-logo-R.svg"
        }
      ],
      "panel": [
        {
          "id": "riot-panel",
          "title": "RIOT Serial Terminal",
          "icon": "resources/icons/riot-logo-R.svg"
        }
      ]
    },
    "views": {
      "riot-sidebar": [
        {
          "id": "riot-web.serial.devices",
          "name": "Connected Serial Devices"
        }
      ],
      "riot-panel": [
        {
          "id": "riot-web.serial.terminal",
          "name": "Serial Terminal",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "riot-web.serial.remove",
          "when": "false"
        },
        {
          "command": "riot-web.serial.openCommunicationTerminal",
          "when": "false"
        },
        {
          "command": "riot-web.serial.flash",
          "when": "false"
        },
        {
          "command": "riot-web.serial.clearTerminal",
          "when": "false"
        },
        {
          "command": "riot-web.serial.closeTerminal",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "riot-web.serial.register",
          "group": "navigation",
          "when": "view == riot-web.serial.devices"
        }
      ],
      "view/item/context": [
        {
          "command": "riot-web.serial.remove",
          "when": "view == riot-web.serial.devices"
        },
        {
          "command": "riot-web.serial.openCommunicationTerminal",
          "when": "view == riot-web.serial.devices && (viewItem not in riot-web.openDevice)",
          "group": "inline"
        },
        {
          "command": "riot-web.serial.flash",
          "when": "view == riot-web.serial.devices && (viewItem not in riot-web.openDevice)",
          "group": "inline"
        },
        {
          "command": "riot-web.serial.closeTerminal",
          "when": "view == riot-web.serial.devices && (viewItem in riot-web.openDevice)",
          "group": "inline"
        }
      ],
      "webview/context": [
        {
          "command": "riot-web.serial.clearTerminal",
          "when": "webviewId == riot-web.serial.terminal && riot-web.openDevice != none"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.105.0",
    "@types/w3c-web-serial": "^1.0.8",
    "@types/w3c-web-usb": "^1.0.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-web": "^0.0.74",
    "assert": "^2.1.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "esptool-js": "^0.5.7"
  }
}
